<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.eugeniobarquin.madridshops.activities.ShopListActivity">

    <fragment
        android:id="@+id/activity_shop_list__map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <fragment
        android:id="@+id/activity_shop_list__fragment_shops"
        android:name="com.eugeniobarquin.madridshops.fragments.ShopsFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        tools:layout_below="@id/activity_shop_list__map"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"/>

    <ProgressBar
        android:id="@+id/activity_shop_list__progress_bar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

</RelativeLayout>
